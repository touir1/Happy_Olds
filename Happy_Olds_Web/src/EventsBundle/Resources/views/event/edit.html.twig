{% extends 'base.html.twig' %}

{% block body %}

    <link rel="stylesheet" type="text/css" href="AdminLTE.css" />

    <div class="col-md-3">

        <!-- Profile Image -->
        <div class="box box-danger">
            <div class="box-body box-profile">
                {% if(app.user.WebPath != null) %}
                    <img class="profile-user-img img-responsive img-circle" src="{{ asset(app.user.WebPath) }}" alt="Photo de profil de l'utilisateur">
                {% else %}
                    <img class="profile-user-img img-responsive img-circle" src="{{ asset('dist/img/default-avatar.png') }}" alt="Photo de profil de l'utilisateur">
                {% endif %}
                <h3 class="profile-username text-center"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"> <p> {{ app.user.nom }} {{ app.user.prenom }}</p> </font></font></h3>
                <ul class="list-group list-group-unbordered">
                    <li class="list-group-item">
                        <font style="vertical-align: inherit;"><font style="vertical-align: inherit;"></font></font><a href={{ path('event_index') }}/>
                        Tout les événements</li>
                    <li class="list-group-item">
                        <font style="vertical-align: inherit;"><font style="vertical-align: inherit;"></font></font><a href={{ path('event_venir') }}/>
                        Avenir</li>
                    <li class="list-group-item">
                        <font style="vertical-align: inherit;"><font style="vertical-align: inherit;"></font></font><a href={{ path('event_affiche') }}/>
                        Mes événements</li>
                    <li class="list-group-item">
                        <font style="vertical-align: inherit;"><font style="vertical-align: inherit;"></font></font><a href={{ path('event_voir') }}/>
                        Voter pour les événements
                    </li>
                    <li class="list-group-item">
                        <font style="vertical-align: inherit; "><font style="vertical-align: inherit;"></font></font><a href={{ path('event_rechercher') }} />
                        Recherche </li>
                </ul>
            </div></div></div>
<div class="col-md-9">
    <div class="box box-danger">
        <div class="box-header with-border">
            <h3 class="box-title"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"><h1 class="title">Modifier l'évenement</h1></font></font></h3>
        </div>

        <h5 align="right"><a href="{{ path('event_show4', {'id':event.id}) }}">Retour à la description</a></h5>

        <table width= "90%" , align="center">
        {{ form_start(edit_form) }}
        <tr><td>
                <div class="form-group">
                    <label class="text-muted">Titre : </label>
                    {{
                    form_widget(edit_form.titre, {'attr' : {'class' : 'form-control', 'rows':'1',
                        'placeholder': 'Tapez le titre'}})
                    }}
                </div>
                <div class="form-group">
                    <label class="text-muted">Description : </label>

                    {{

                    form_widget(edit_form.description, {'attr' : {'class' : 'form-control', 'rows':'3','id':'editor1','name':' editor1',
                        'placeholder': 'Enter la description ...'}})
                    }}
                </div>

                <div class="form-group">
                    <label class="text-muted">Nombre des participants : </label>
                    {{
                    form_widget(edit_form.nbrParticipant, {'attr' : {'class' : 'form-control', 'rows':'1',
                        'placeholder': 'Tapez le nombre'}})
                    }}
                </div>



                <div class="form-group">
                    <label class="text-muted">Ville </label>
                    {{
                    form_widget(edit_form.ville, {'attr' : {'class' : 'form-control',
                        'placeholder': 'Ville...' }})
                    }}
                </div>

                <div class="form-group">
                    <label class="text-muted">Lieu </label>
                    {{
                    form_widget(edit_form.lieu, {'attr' : {'class' : 'form-control', 'rows':'1',
                        'placeholder': 'Emplacement'}})
                    }}
                </div>

                <br><br>
                <table align="center" size="50%">
                    <tr> <th>Date de début : </th>
                        <td width="50%">{{ form_widget(edit_form.dateDebut) }}</td>
                        <th>Date de fin : </th>
                        <td>{{ form_widget(edit_form.dateFin) }}</td></tr>
    </table>


                <!--table>
                    <tr><th><div class="form-group">
                                <label class="text-muted">Photo : </label></div><th><td>{{ form_widget(edit_form.file) }}</td></tr></table-->
                <br><br>
                <table valign="right"><tr>
                        <div class="form-group" align="right">
                            {{
                            form_widget(edit_form.Valider, {'attr' : {'class' : 'btn btn-block btn-danger','style':'width: 12%'}})
                            }}
                        </div></tr></table>
            </td></tr></table>

    {{ form_end(edit_form) }}










    <ul>
        <!--li>
            <a href="{{ path('event_index') }}">Back to the list</a>
        </li-->
        <!--li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li-->
    </ul>

{% endblock %}
























