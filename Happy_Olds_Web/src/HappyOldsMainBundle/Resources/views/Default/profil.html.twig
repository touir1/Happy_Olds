{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <div class="col-md-3">


        <!-- Profile Image -->
        <div class="box box-danger">
            <div class="box-body box-profile">
                <img class="profile-user-img img-responsive img-circle" src="../../dist/img/user4-128x128.jpg" alt="Photo de profil de l'utilisateur">
                <br>
                <br>
                <label for="avatar">Choose a profile picture:</label>
{{ form_widget(form.file) }}
               {# <input type="file"
                       id="avatar" name="avatar"
                       accept="image/png, image/jpeg">#}
            </div>
            <!-- /.box-body -->

        </div>
        <!-- /.box -->
    </div>
    <!-- About Me Box -->
    <div class="col-md-9">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">À propos de moi</font></font></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body" >
                <span class="label-input100">Nom</span>
                {{
                form_widget(form.nom, {'attr':{'class':'form-control'}})
                }}
<div class="wrap-input100 validate-input" data-validate="Nom requis">


                    {#<input class="input100" type="text" id="fos_user_registration_form_nom" name="fos_user_registration_form[nom]" placeholder="Nom...">#}
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Prénom requis">
                    <span class="label-input100">Prénom</span>
                    {{
                    form_widget(form.prenom,{'attr':{'class':'form-control'}})
                    }}
                    {#<input class="input100" type="text" id="fos_user_registration_form_prenom" name="fos_user_registration_form[prenom]" placeholder="Prenom...">#}
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Date de naissance requise">
                    <span class="label-input100">Date de naissance</span>
                    {{
                    form_widget(form.date_naissance, {'attr' : {'class' : 'form-control pull-right'}})
                    }}

                </div>

                <div class="wrap-input100">
                    <span class="label-input100">Travail</span>
                    {{
                    form_widget(form.job, {'attr' : {'class' : 'form-control select2'}})
                    }}
                    {#<input class="input100" type="text" name="email" placeholder="Adresse email...">#}
                    <span class="focus-input100"></span>
                </div>
                <div class="wrap-input100">
                    <span class="label-input100">Ville</span>
                    {{
                    form_widget(form.ville, {'attr' : {'class' : 'form-control select2'
                        }})
                    }}
                    {#<input class="input100" type="text" name="email" placeholder="Adresse email...">#}
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100">
                    <span class="label-input100">Status</span>
                    {{
                    form_widget(form.role, {'attr' : {'class' : 'form-control select2'}})
                    }}
                    {#<input class="input100" type="text" name="email" placeholder="Adresse email...">#}
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate = "Email valide requis: ex@abc.xyz">
                    <span class="label-input100">Email</span>
                    {{
                    form_widget(form.email, {'attr' : {'class' : 'form-control'}})
                    }}
                    {#<input class="input100" type="text" name="email" placeholder="Adresse email...">#}
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Nom d'utilisateur requis">
                    <span class="label-input100">Nom d'utilisateur</span>
                    {{
                    form_widget(form.username,{'attr':{'class':'form-control'}})
                    }}
                    {#<input class="input100" type="text" name="username" placeholder="Nom d'utilisateur...">#}
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate = "Mot de passe requis">
                    <span class="label-input100">Mot de passe</span>
                    {{
                    form_widget(form.plainPassword.first, {'attr' : {'class' : 'form-control'}})
                    }}
                    {#<input class="input100" type="password" name="pass" placeholder="*************">#}
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate = "Comfirmation mot de passe requis">
                    <span class="label-input100">Confirmation mot de passe</span>
                    {{
                    form_widget(form.plainPassword.second, {'attr' : {'class' : 'form-control'}})
                    }}
                    {#<input class="input100" type="password" name="repeat-pass" placeholder="*************">#}
                    <span class="focus-input100"></span>
                </div>
                <br>
                <br>
                {{ form_widget(form.Valider, {'attr' : {'class' : 'btn btn-danger btn-lg'}}) }}




                </div>





        </div>
    </div>

            <!-- /.box-body -->
        </div>
    </div>
    {{ form_end(form) }}
    <!-- /.box -->

{% endblock %}

