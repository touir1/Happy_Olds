{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-3">

        <!-- Profile Image -->
        <div class="box box-danger">
            <div class="box-body box-profile">
                <img class="profile-user-img img-responsive img-circle" src="{{ asset(app.user.WebPath) }}" alt="Photo de profil de l'utilisateur">

                <h3 class="profile-username text-center"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{ app.user.prenom }} {{ app.user.nom }}</font></font></h3>

                <p class="text-muted text-center"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{ app.user.job }}</font></font></p>

                <ul class="list-group list-group-unbordered">
                    <li class="list-group-item">
                        <b><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Username </font></font></b> <a class="pull-right"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{ app.user.username }}</font></font></a>
                    </li>
                    <li class="list-group-item">
                        <b><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Score finale </font></font></b> <a class="pull-right"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{ app.user.scorefinal }}</font></font></a>
                    </li>
                    <li class="list-group-item">
                        <b><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Role </font></font></b> <a class="pull-right"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{ app.user.role }}</font></font></a>
                    </li>
                </ul>

                <a href="{{ path('modifier_profil',{'id':app.user.id}) }}" class="btn btn-primary btn-block"><b><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Modifier profil</font></font></b></a>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
        <!-- About Me Box -->
    <div class="col-md-9">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">À propos de moi</font></font></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <strong><i class="fa fa-book margin-r-5"></i><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"> Nom Prénom </font></font></strong>

                <p class="text-muted"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">
                            {{ app.user.nom }} {{ app.user.prenom }}
                        </font></font></p>

                <hr>

                <strong><i class="fa fa-map-marker margin-r-5"></i><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"> Ville</font></font></strong>

                <p class="text-muted"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{ app.user.ville }}</font></font></p>

                <hr>

                <strong><i class="fa fa-pencil margin-r-5"></i><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"> Date de naissance </font></font></strong>

                <p class="text-muted"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{ app.user.dateNaissance|date('Y-m-d') }}</font></font></p>

                <hr>

                <strong><i class="fa fa-file-text-o margin-r-5"></i><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"> Email</font></font></strong>

                <p><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{ app.user.email }} </font></font></p>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
        <!-- /.box -->

{% endblock %}

