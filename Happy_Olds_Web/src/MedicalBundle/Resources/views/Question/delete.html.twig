{% extends 'baseadmin.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{ questions.getTotalItemCount }} Questions</font></font></h3>


                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tbody><tr>
                            <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{ knp_pagination_sortable(questions, 'Utilisateur', 'q.user.Username') }}</font></font></th>
                            <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{ knp_pagination_sortable(questions, 'titre', 'q.titre') }}</font></font></th>
                            <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{ knp_pagination_sortable(questions, 'Description', 'q.text') }}</font></font></th>
                            <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{ knp_pagination_sortable(questions, 'Date publication', 'q.dateQ') }}</font></font></th>
                            <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Action</font></font></th>
                        </tr>
                        {% for question in questions %}
                            <tr>

                                <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{ question.user.Username }} </font></font></td>
                                <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{ question.titre }}</font></font></td>
                                <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{ question.text|raw}}</font></font></td>
                                <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{question.dateQ|date('Y-m-d')  }}</font></font></td>
                                <td> <a class="btn  btn-default  btn-xs" style="background-color:#3c8dbc;color:#fff; " href="{{ path('Question_DeleteAdm',{'id':question.id}) }}"><i class="fa fa-trash"></i> Supprimer </a>
                                </td>


                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
    <div class="navigation">
        {{ knp_pagination_render(questions) }}
    </div>
{% endblock %}