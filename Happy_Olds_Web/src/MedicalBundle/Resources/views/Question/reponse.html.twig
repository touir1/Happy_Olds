{% extends 'base.html.twig' %}
{% block body %}

    <script src="https://cdn.ckeditor.com/4.11.4/full-all/ckeditor.js"></script>

    <div class="box box-warning">
        <div class="box-header with-border">
            <h3 class="box-title">Modification de la réponse </h3>
        </div>

      <div class="box-body pad">
            {{ form_start(form) }}

            <div class="form-group">
                <label class="text-muted">Titre :</label>
                {{ question.titre }}
            </div>

            <div class="form-group">
                <label class="text-muted">Desription de la question </label>
                {{
                question.text
                }}
            </div>
        </div>

        <div class="box-body pad">

            <div class="form-group">
                <label class="text-muted">Réponse </label>

                {{

                form_widget(form.text, {'attr' : {'class' : 'form-control', 'rows':'3','id':'editor1','name':' editor1',
                    'placeholder': 'Enter ...'}})
                }}
                <br>
                <br>
            </div>
            <div class="form-group">
                {{
                question.file
                }}
            </div>
            <br/>
            <br/>
            <div class="form-group">
                {{
                form_widget(form.Valider, {'attr' : {'class' : 'btn btn-block btn-danger','style':'width: 12%;'}})
                }}
            </div>
        </div>
    </div>
    <br>

    {{ form_end(form) }}





    <script>
        CKEDITOR.replace( 'editor1' );
    </script>

{% endblock %}