{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('ChatRoom/css/utils.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <section class="content-header">
        <h1>
            Membres
            <small>liste</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('chat_room_homepage') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
            <li><a href="{{ path('chat_room_group_my_list') }}"> Mes groupes</a></li>
            <li><a href="{{ path('chat_room_group_consult', {'id': groupe.id}) }}"> Groupe</a></li>
            <li class="active"> Liste membres</li>
        </ol>
    </section>
    <section class="content">
        <br>
        <div class="box">
            Groupe: <b>{{ groupe.titre }}</b><br>
            Description: {{ groupe.description }}<br>
        </div>
        <br>

        <div class="box box-widget collapsed-box">
            <div class="box-header with-border" style="cursor: pointer;" data-widget="collapse">
                <div>
                    <h3 class="box-title">Filtre de recherche</h3>
                </div>
                <div class="box-tools">
                    <!--
                    <button type="button" class="btn btn-box-tool" data-toggle="tooltip" title="" data-original-title="Mark as read">
                        <i class="fa fa-circle-o"></i></button>
                     -->
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
                    </button>
                    <!--
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                    -->
                </div>
            </div>
            <div class="box-body">
                <form action="{{ path('chat_room_member_list_members',{'group_id' : groupe.id,}) }}" method="post" class="form-horizontal">

                    <div class="form-group">
                        <label for="username" class="col-sm-2 control-label">Pseudo</label>

                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="Pseudo" value="{{ username }}" name="username" id="username">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="nom" class="col-sm-2 control-label">Nom</label>

                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="Nom" value="{{ nom }}" name="nom" id="nom">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="prenom" class="col-sm-2 control-label">Prenom</label>

                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="Prenom" value="{{ prenom }}" name="prenom" id="prenom">
                        </div>
                    </div>
                    <div class="box-footer">
                        <input class="btn btn-info pull-right" type="submit" value="Rechercer">
                    </div>

                </form>
            </div>
        </div>

        <table class="table table-bordered">
            <tbody id="group_list">
            <tr>
                <th hidden="true">id</th>
                <th>Nom d'utilisateur</th>
                <th>Nom</th>
                <th style="width: 40px">Prenom</th>

                <th>Action</th>
            </tr>
            {% for u in liste %}
                <tr>
                    <td hidden="true">u.id</td>
                    <td>{{ u.username }}</td>
                    <td>{{ u.nom }}</td>
                    <td>{{ u.prenom }}</td>
                    <td>
                        {% if app.user.id == groupe.creator.id and u.id != app.user.id %}
                            <a class="btn btn-danger" href="{{ path('chat_room_member_delete',{'group_id': groupe.id, 'member_id': u.id}) }}"><i class="fa fa-sign-out"></i> Faire sortir</a>
                            <a class="btn btn-danger" href="{{ path('chat_room_member_bann',{'group_id': groupe.id, 'member_id': u.id}) }}"><i class="fa fa-close"></i> Bannir</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <!--
        <div class="box-footer clearfix">
            <ul class="pagination pagination-sm no-margin pull-right">
                <li><a href="#">«</a></li>
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">»</a></li>
            </ul>
        </div>
        -->

        <div data-twig="{{ data | json_encode | e('html_attr') }}" id="data_twig"></div>
    </section>
{% endblock %}
{% block scripts %}
    <script src="{{ asset('ChatRoom/js/utils.js') }}"></script>
    <script src="{{ asset('ChatRoom/js/groupe/membreGroupe/list_members.js') }}"></script>
{% endblock %}
